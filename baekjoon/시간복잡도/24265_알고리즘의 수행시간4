#include <iostream>
using namespace std;

int main(){
    long n;
    cin >> n;
    cout << n*(n-1)/2 << '\n' << 2;
    //최고차항의 차수: n 이므로 1
}


/* 코드
MenOfPassion(A[], n) {
    sum <- 0;
    for i <- 1 to n - 1  //1~(n-1) 까지 총 "n-1" 번
        for j <- i + 1 to n  //
            sum <- sum + A[i] × A[j]; # 코드1
    return sum;
}


n=1 일때 
n=2 일때 1 * 1
n=3 일때 1*2 + 1*1
n=4 일때 1*3 + 1*2 + 1*1
즉, (n-1)*(n-1-i)+ .... = (n-1)*n/2

* 1~n까지의 합이 n*(n+1)/2
