#include <iostream>
#include <string>
using namespace std;
int main(){
    string s;
    cin >> s;
    int h_length;
    if(s.length()%2 != 0){
        h_length = (s.length() - 1)/2;    
    }
    if(s.length()%2 == 0){
        h_length = (s.length())/2;    
    }
    bool equal = true;
    for(int i=0; i<h_length;i++){
        if(s[i] == s[s.length() -1-i])
            equal = true;
        else{
            equal = false;
            break;
    }
    if(equal == true)
        cout << 1;
    else
        cout << 0;
}
