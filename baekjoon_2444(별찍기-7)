#include <iostream>
using namespace std;
int main(){
        int n;
        cin >> n;
        for(int i=1; i<=n-1; i++){
               for(int j=n-i;j>=1;j--){
                cout << " ";
               }
               for(int j=1;j<=(2*i)-1;j++){
                cout << "*";
               }
               cout << endl;
        }
        for(int i=0; i<(2*n)-1;i++){
                cout << "*";
        }
        cout << endl;
        for(int i=n-1; i>=0; i--){
               for(int j=0;j<n-i;j++){
                cout << " ";
               }
               for(int j=(2*i)-1;j>=1;j--){
                cout << "*";
               }
               cout << endl;
        }
}
