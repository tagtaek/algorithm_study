//programmers_문자열섞기

#include <string>
#include <vector>

using namespace std;

string solution(string str1, string str2) {
    string answer = "";
   /*for (int i=0; i< str1.length() ; i++){
        answer[i] = str1[i];
        answer[(i*2) +1] = str2[i];
    }
*/
    //빈 문자열에 인덱스로 접근하여 값 변경하기는 불가!!

    for (int i=0; i< str1.length() ; i++){
        answer += str1[i];
        answer += str2[i];
    }
    return answer;
}
