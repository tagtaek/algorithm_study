//programmers_문자열섞기

#include <string>
#include <vector>

using namespace std;

string solution(string str1, string str2) {
    string answer = "";
   /*for (int i=0; i< str1.length() ; i++){
        answer[i] = str1[i];
        answer[(i*2) +1] = str2[i];
    }
*/
    for (int i=0, j=0; i < str1.length() + str1.length(); i+=2, j++){
        answer[i] = str1[j];
        answer[i+1] = str2[j];
    }
    return answer;
}
